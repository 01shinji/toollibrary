<table class="table table-bordered">
 <tbody>
  <tr>
    <th scope="row">
      名前
    </th>
    <td colspan="3">

      <%= @entry.name %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      メールアドレス
    </th>
    <td colspan="3">

      <%= @entry.email %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      住所
    </th>
    <td colspan="3">

      <%= @entry.address %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      電話番号
    </th>
    <td colspan="3">

      <%= @entry.phone_number %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      貸出し可能な商品
    </th>
    <td colspan="3">

      <%= @entry.product %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      問い合わせ内容
    </th>
    <td colspan="3">

      <%= simple_format(@entry.message) %>
    </td>
  </tr>
 </tbody>
</table>

