<div class="row" >
  <div class=" devise_container">

    <h3 class="text-center">新規ユーザー登録</h3>
    <br/>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render 'shared/devisemes' %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, placeholder: "氏名", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
      </div>

      <p class="text-center">
        <input type="checkbox" id="" >
        <%= link_to "利用規約", pages_rules_path %>および<%= link_to "プライバシーポリシー", pages_policy_path %>に同意して登録する
      </p>

      <div class="actions text-center">
        <%= f.submit "登録", class: "btn btn-normal btn-sm", id: "new-registration" , disabled: true %>
      </div>
    <% end %>

    <div class="text-include-separator">
     <h5 class="text">または</h5>
     <hr class="dotted-hr">
   </div>

   <div class="text-center">
     <%= link_to  user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-sm"  do %>
      <div class="social_btn">
       <svg
       xmlns="http://www.w3.org/2000/svg"
       xmlns:xlink="http://www.w3.org/1999/xlink"
       width="15px"
       height="15px"
       viewBox="0 0 300 300">
       <defs><style> .fill {fill: #ffffff;}</style></defs>
