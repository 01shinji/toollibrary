<div class="row">
  <div class=" devise_container">

    <h3 class="text-center">新規ユーザー登録</h3>
    <br/>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render 'shared/devisemes' %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, placeholder: "氏名", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
      </div>

      <p class="text-center">
        ※登録することで<%= link_to "利用規約", pages_rules_path %>および<%= link_to "プライバシーポリシー", pages_policy_path %>に同意したものとみなされます
      </p>

      <div class="actions text-center">
        <%= f.submit "登録", class: "btn btn-normal btn-sm" %>
      </div>
    <% end %>




  </div>
</div>
