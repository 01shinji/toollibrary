<div class="row ">
  <div class="devise_container">

    <h3 class="text-center">ログイン</h3>
    <br/>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>登録情報を保持する
        <% end %>
        <span class="pull-right">
          <%= link_to "パスワードをお忘れですか？", new_user_password_path %>
        </span>
      </div>
      <br/>

      <div class="actions text-center">
        <%= f.submit "ログイン", class: "btn btn-normal btn-sm " %>
      </div>
    <% end %>




    <p class="text-center" >
      アカウントをお持ちでないですか?&nbsp;
      <%= link_to "新規ユーザー登録", new_user_registration_path %>
    </p>
  </div>
</div>
