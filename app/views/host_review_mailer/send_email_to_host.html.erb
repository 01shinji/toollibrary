<!-- ホストからゲストへのレビュー -->

<div class="">
  <div style="padding: 2px; text-align: center; background-color: #04b4e4;">
    <p style="color:  #ffffff;">
      サーフ文庫
    </p>
  </div>

  <div class="">
    <h4 style="color: #808080; ">
      <%= @guest.fullname %>さん、
      <%= @host_review.host.fullname %>さんからレビューが届きました


    </h4>
    <p>

      <b>
        <%= link_to("
          https://www.toollibrary.jp/listings/#{@host_review.listing_id}", {method: "get"}) do %>
          レビューを見る
        <% end %>
      </b>
    </p>
    <p>

      <b>
        <%= link_to("https://www.toollibrary.jp/listings/#{@host_review.listing_id}/reservations/#{@host_review.reservation_id}", {method: "get"}) do %>
          ホストにレビューをする
        <% end %>
      </b>
    </p>
    <p>
      レビュー内容
    </p>
    <div class="table_container">
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <th>送信者</th>
              <td><%= @host_review.host.fullname %></td>

            </tr>
            <tr>
              <th>送信時間</th>
              <td><%= @host_review.created_at.strftime("%Y年%m月%d日") %></td>

            </tr>
            <tr>
              <th>レビュー</th>
              <td><%= @host_review.comment %></td>

            </tr>


          </tbody>
        </table>
      </div>
    </div>


  </div>

  <div style="padding: 2px; text-align: center;  background-color: #04b4e4; " >
    <p style="color:  #ffffff ; " >
      Copyright(C)&nbsp;サーフ文庫&nbsp;All Rights Reserved.
    </p>

  </div>

</div>
