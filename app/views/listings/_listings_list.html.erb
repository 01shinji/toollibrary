<% listings.each do |listing| %>
   <div class="<% if request.path == '/search' %>col-md-6 col-sm-6 col-xs-6 box<% else %>col-md-3 col-sm-3 col-xs-3 box<% end %>">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <%= image_tag listing.cover_photo(:medium) %>
      </div>
      <div class="panel-body">
        <%= link_to listing.listing_title, listing %><br/>
        <%= listing.listing_type %><br/>
        <%= listing.price_per %>&nbsp;<%= listing.price %>å††

      </div>
    </div>
   </div>
<% end %>
