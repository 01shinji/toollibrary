    <div class="listing-block">
      <div class="">
        <%= image_tag listing.cover_photo(:medium), class: 'img-responsive' %>
      </div>
      <div class="">
        <%= link_to listing.listing_title, listing %><br/>
        <%= listing.listing_type %><br/>
        <%= listing.price_per %>&nbsp;<%= listing.price %>å††

      </div>
    </div>
  </li>
  <% end %>
</ul>
