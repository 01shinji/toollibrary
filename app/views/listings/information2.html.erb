<%= render 'listing_menu' %>

<div class="row">
  <div class=" text-center">
    <div class="panel panel-default">
      <h3>商品の詳細</h3>

      <p class="b-blue  listing_title">

        <%= link_to @listing.listing_title, listing_path(@listing) , class: "white" %>
        <% if !@listing.active.blank? %>
         <span class="white b-red">
          公開中
         </span>
        <% end %>
      </p>

      <div class="container">
       <%= form_for @listing,html: {multipart: true} do |f| %>

        <%= f.hidden_field :location, value: @user.address_city %>

        <div class="form_box">
          <p><b>商品の詳細説明</b></p>
          <div class="form-group">
            <%= f.text_area :description, rows: 5, placeholder: "例:昨年の夏に購入しました。湘南の波にピッタリで、上級者からビギナーまで楽しめます。シングルフィン、リシューコード付き、サイズ7'0×22×3 1/8", class: "form-control", required: true %>
          </div>
        </div>

        <div class="form_box">
          <p><b>利用可能なアメニティ</b></p>
          <div class="form-group row">
            <div class="col-md-4 col-sm-4 col-xs-4 check">
              <%= f.check_box :is_shower %>
              シャワー
            </div>
            <div class="col-md-4 col-sm-4 col-xs-4 check">
              <%= f.check_box :is_bicycle %>
              自転車
            </div>
            <% if !(@listing.category2 == "ボード置き場") %>
             <div class="col-md-4 col-sm-4 col-xs-4 check">
               <%= f.check_box :is_wetsuit %>
              ウェットスーツ
             </div>
            <% end %>
          </div>
        </div>

        <%= f.hidden_field :instant, value: "Request" %>



        <% if !(@listing.category2 == "ボード置き場") %>
         <div class="purchase">
          <p class="text-left">
            ※破損が起きた際の補償費の計算の参考にします
          </p>

          <div class="form_box">
            <p><b>購入時期</b></p>
            <div class="form-group">
              <%= f.text_field :purchase_time, placeholder: "例:2016年春ごろ", class: "form-control", required: true %>
            </div>
          </div>

          <div class="form_box">
            <p><b>購入価格</b></p>
            <div class="">

              <div class="form-group" >
                <ul class="row">

                  <li class="">
                    <%= f.text_field :purchase_price, placeholder: "例:80000", class: "form-control", required: true %>
                  </li>
                  <li class="">
                    <p>円</p>
                  </li>
                </ul>
              </div>

            </div>

          </div>



          </div>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-form" %>
        </div>

       <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
    $("#autoaddress").geocomplete();
  })
</script>
