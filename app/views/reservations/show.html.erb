<div class="row reservation-menu ">
  <div class="col-md-8 col-md-offset-2">
    <ul class="">
      <li class="reservation-item">
        <span class="blue">
          1.リクエスト
        </span>
        <span class="blue">
          <i class="fa fa-long-arrow-right" aria-hidden="true"></i>&nbsp;
        </span>

      </li>
      <li class="reservation-item">
        <span class="blue">
          2.リクエスト確認
        </span>
        <span <% if @reservation.Approved? %> class="blue" <% else %> class="gray" <% end %> >
          <i class="fa fa-long-arrow-right" aria-hidden="true"></i>&nbsp;
        </span>
      </li>
      <li class="reservation-item">
        <span <% if @reservation.Approved? %> class="blue" <% else %> class="gray" <% end %>>
          3.予約確定
        </span>
        <span <% if @reservation.Approved? && @reservation.start_date.day <= @date.day &&  @date.day <= @reservation.end_date.day  || @reservation.Approved? && @reservation.end_date.day < @date.day %> class="blue" <% else %> class="gray" <% end %>>
          <i class="fa fa-long-arrow-right" aria-hidden="true"></i>&nbsp;
        </span>
      </li>
      <li class="reservation-item">
        <span <% if @reservation.Approved? && @reservation.start_date.day <= @date.day &&  @date.day <= @reservation.end_date.day || @reservation.Approved? && @reservation.end_date.day < @date.day  %> class="blue" <% else %> class="gray" <% end %>>
          4.当日
        </span>
        <span <% if @reservation.Approved? && @reservation.end_date.day < @date.day   %> class="blue" <% else %> class="gray" <% end %>>
          <i class="fa fa-long-arrow-right" aria-hidden="true"></i>&nbsp;
        </span>
      </li>
      <li class="reservation-item">
        <span <% if @reservation.Approved? && @reservation.end_date.day < @date.day   %> class="blue" <% else %> class="gray" <% end %> >
          5.売上反映
        </span>

      </li>
    </ul>
  </div>
</div>

<% if current_user == @reservation.user  %>
  <!-- ゲスト向け表示 -->
  <%= render 'show_guest' %>


<% else current_user == @reservation.listing.user %>
  <!-- ホスト向け表示 -->
  <%= render 'show_host' %>


<% end %>
